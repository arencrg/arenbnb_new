<p id="notice"><%= notice %></p>

<p>Photo: <%= image_tag(current_user.avatar)%></p>

<h3> Welcome back, <%= current_user.full_name%>!</h3>

<table>
  <thead>
    <tr>
      <th>Room name</th>
      <th>Room price</th>
      <th>Room type</th>
      <th>Location</th>
      <th>Average Rating</th>
    </tr>
  </thead>

  <tbody>
    <% @bnbrooms.each do |bnbroom| %>
      <tr>
        <td><%= bnbroom.room_name %></td>
        <td><%= bnbroom.room_price %></td>
        <td><%= bnbroom.room_type %></td>
        <td><%= bnbroom.neighborhood %>, <%= bnbroom.country %></td>
        <td><%= bnbroom.reviewcommentrates.average(:rating) %> </td>
        <td><%= link_to 'Show', bnbroom %></td>
        <% if bnbroom.user.id == current_user.id %>
        <td><%= link_to 'Edit', edit_bnbroom_path(bnbroom) %></td>
        <td><%= link_to 'Destroy', bnbroom, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Bnbroom', new_bnbroom_path %>
